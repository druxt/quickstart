{
  "name": "quickstart-druxt-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:fix": "prettier --write --list-different . && npm run lint:js -- --fix && npm run lint:style -- --fix",
    "lint:js": "eslint --ext .js,.vue --ignore-path ../.gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path ../.gitignore",
    "serve": "npm run build && npm start",
    "start": "nuxt start",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "start-server-and-test serve http://localhost:3000 'npx cypress run'",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 'npx cypress open'",
    "test:e2e:open": "start-server-and-test serve http://localhost:3000 'npx cypress open'",
    "test:unit": "jest"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "core-js": "3.25.5",
    "dotenv": "^16.0.3",
    "druxt": "^0.20.0",
    "druxt-auth": "^0.2.0",
    "druxt-site": "^0.13.0",
    "nuxt": "2.15.8"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@nuxtjs/eslint-config": "^11.0.0",
    "@nuxtjs/eslint-module": "^3.1.0",
    "@nuxtjs/storybook": "^4.2.0",
    "@vue/test-utils": "^1.3.0",
    "babel-jest": "^29.1.2",
    "cypress": "^10.10.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.6.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "postcss": "8.4.18",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^28.0.0",
    "vue-jest": "^3.0.7"
  }
}
